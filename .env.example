# Estúdio Vértice Project Configuration

# Project Information
PROJECT_NAME="estudio-vertice"
PROJECT_VERSION="4.1.0"
PROJECT_ID="estudio-vertice-ai"

# Google Cloud Configuration
GCP_PROJECT_ID="estudio-vertice-ai"
GCP_REGION="us-central1"
GCP_ZONE="us-central1-a"

# Terraform Configuration
TF_STATE_BUCKET="estudio-vertice-terraform-state"
TF_STATE_PREFIX="terraform/state"

# Performance Targets
TARGET_PROCESSING_TIME_MINUTES=8
TARGET_QUALITY_SCORE=9.0
TARGET_COST_PER_VIDEO=2.50
TARGET_MONTHLY_VIDEOS=15000
TARGET_NPS_SCORE=92

# Feature Flags
ENABLE_KURZGESAGT_METHODOLOGY=true
ENABLE_NIHILISTIC_OPTIMISM=true
ENABLE_ADAPTIVE_TEMPLATES=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_PREDICTIVE_MODELING=true

# API Endpoints
VERTEX_AI_ENDPOINT="https://us-central1-aiplatform.googleapis.com"
GEMINI_API_ENDPOINT="https://generativelanguage.googleapis.com"

# Environment-specific overrides can be placed in:
# - .env.development
# - .env.staging  
# - .env.production